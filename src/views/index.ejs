<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Express JS - Ejs - vercel</title>
    <link rel="stylesheet" href="css/styles.css" />
    <link rel="shortcut icon" href="images/logo.webp" type="image/x-icon" />
  </head>

  <body>
    <section
      style="
        display: flex;
        width: 100%;
        height: 100vh;
        justify-content: center;
        flex-direction: column;
        gap: 4px;
      "
    >
      <input
        type="text"
        style="
          height: 30px;
          width: 90%;
          margin-left: auto;
          margin-right: auto;
          border: none;
          outline: none;
          border-radius: 10px;
          padding: 4px;
        "
        id="input"
        placeholder="double tap for paste in clipboard"
      />
      <a
        target="_blank"
        class="btn"
        id="button"
        style="width: 90%; margin-left: auto; margin-right: auto"
      >
        Redirect
      </a>
    </section>

    <script>
      const elementInput = document.getElementById("input");
      const elementButton = document.getElementById("button");

      // double tap for paste to clipboard
      elementInput.addEventListener("dblclick", async (event) => {
        const clipboard = await window.navigator.clipboard.readText();
        event.target.value = clipboard;
      });

      // reguler expression
      function cleanAndTrim(input) {
        let cleaned = input.replace(/[+-]/g, "");
        cleaned = cleaned.replace(/\D/g, "");
        if (cleaned.startsWith("0")) {
          cleaned = "62" + cleaned.slice(1);
        }
        if (cleaned.length > 14) {
          cleaned = cleaned.substring(0, 14);
        }
        return cleaned;
      }

      // open in new tab
      elementButton.addEventListener("click", (event) => {
        window.open(
          `https://wa.me/${cleanAndTrim(elementInput.value)}`,
          "_blank"
        );
      });
    </script>
  </body>
</html>
